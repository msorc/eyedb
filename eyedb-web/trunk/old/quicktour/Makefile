include /home/viara/eyedb_install/share/eyedb/Makefile.eyedb

CXXFLAGS += $(EYEDB_CXXFLAGS) $(EYEDB_CPPFLAGS)
LDFLAGS  += ${EYEDB_LDFLAGS}
LDLIBS   += ${EYEDB_LDLIBS}

# if you use gcc
GCC_FLAGS = -Wl,-R$(EYEDB_LIBDIR)

# Example for compiling a client program:

client_program = student_test

$(client_program): student.o $(client_program).o
	$(CXX) $(LDFLAGS) $(GCC_FLAGS) -o $@ $^ $(LDLIBS)

StudentTest.class: StudentTest.java student/Database.java
	CLASSPATH=$(EYEDB_CLASSPATH):. javac *.java student/*.java

