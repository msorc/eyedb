#!/bin/bash
top_builddir=@top_builddir@
HIBERNATE_JAR=@HIBERNATE_JAR@
HIBERNATE_CLASSPATH=@HIBERNATE_CLASSPATH@
JDBC_CONNECTOR_JAR=@JDBC_CONNECTOR_JAR@
SLF4J_JAR=@SLF4J_JAR@
JAVA=@JAVA@
srcdir=@srcdir@

EYEDB_BENCHMARK_JAR=${top_builddir}/src/java/eyedb-benchmark.jar

#BENCHMARK=$1
BENCHMARK=org.eyedb.benchmark.quicktour.hibernate.CreateBenchmark
PROPERTIES=hibernate.properties

set -e

run_benchmark() {
    CLASSPATH=$EYEDB_BENCHMARK_JAR:$HIBERNATE_JAR:$HIBERNATE_CLASSPATH:$JDBC_CONNECTOR_JAR:$SLF4J_JAR
    CLASSPATH=$CLASSPATH $JAVA org.eyedb.benchmark.framework.Run $BENCHMARK $PROPERTIES
}

run_benchmark


