<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class name="org.eyedb.benchmark.quicktour.hibernate.Course" table="course">

    <id name="id" column="course_id">
      <generator class="native"/>
    </id>

    <property name="title"/>

    <property name="description"/>

    <many-to-one name="teacher" column="person_id" fetch="join"/>

    <set name="students" table="student_course" inverse="true">
      <key column="course_id"/>
      <many-to-many column="student_id" class="org.eyedb.benchmark.quicktour.hibernate.Student"/>
    </set>

  </class>

</hibernate-mapping>
